<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.theiner.quick3d"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
            android:name=".Quick3DMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowFotos"
            android:label="@string/title_activity_show_fotos"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ShowAnaglyph"
            android:label="@string/title_activity_show_anaglyph"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ShowWiggle"
            android:label="@string/title_activity_show_wiggle"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
